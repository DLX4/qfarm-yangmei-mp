.price,
  .price__icon,
  .price__count {
    display: inline-block;
    line-height: 1;
  }

  .price__icon--sup,
  .price__icon--sub {
    font-size: 52%;
  }

  .price__icon--sup {
    vertical-align: super;
    line-height: 1.1;
  }

  .price__icon--del,
  .price__count--del {
    font-weight: normal;
    text-decoration: line-through;
  }

  .count__decimal--small {
    display: inline;
    font-size: 62%;
  }