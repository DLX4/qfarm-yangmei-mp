
.btn {
        display: inline-block;
        margin: 0;
        border: 1rpx solid transparent;
        border-radius: 4rpx;
        white-space: nowrap;
        vertical-align: middle;
        font-weight: 400;
    }

    .btn::after {
        content: none;
    }

    /* size 属性 large, normal, small*/
    .btn__size--large {
        width: 690rpx;
        height: 90rpx;
        line-height: 90rpx;
        padding: 0 24rpx;
        font-size: 36rpx;
    }
    .btn__size--normal {
        display: inline-block;
        min-width: 180rpx;
        height: 66rpx;
        line-height: 66rpx;
        padding: 0 24rpx;
        font-size: 28rpx;
    }

    .btn__size--small {
        display: inline-block;
        min-width: 102rpx;
        height: 48rpx;
        line-height: 48rpx;
        padding: 0 24rpx;
        font-size: 24rpx;
    }

    /* type 属性 */
    .btn__selection--false {
        color: #333;
        background-color: #5AC837;
        border-color: #5AC837;
    }
    .btn__selection--true {
        color: #333;
        background: transparent none;
        border-color: #5AC837;
    }
    .btn__beauty--false {
        color: #fff;
        background-color: #ff5777;
        border-color: #ff5777;
    }
    .btn__beauty--true {
        color: #ff5777;
        background: transparent none;
        border-color: #ff5777;
    }
    .btn__primary--false {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn__primary--true {
        color: #007bff;
        background: transparent none;
        border-color: #007bff;
    }
    .btn__success--false {
        color: #fff;
        background-color: #28a745;
        border-color: #28a745;
    }
    .btn__success--true {
        color: #28a745;
        background: transparent none;
        border-color: #28a745;
    }
    .btn__danger--false {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }
    .btn__danger--true {
        color: #dc3545;
        background: transparent none;
        border-color: #dc3545;
    }
    .btn__warning--false {
        color: #212529;
        background-color: #ffc107;
        border-color: #ffc107;
    }
    .btn__warning--true {
        color: #ffc107;
        background: transparent none;
        border-color: #ffc107;
    }
    .btn__secondary--false {
        color: #fff;
        background-color: #6c757d;
        border-color: #6c757d;
    }
    .btn__secondary--true {
        color: #6c757d;
        background: transparent none;
        border-color: #6c757d;
    }
    .btn__info--false {
        color: #fff;
        background-color: #17a2b8;
        border-color: #17a2b8;
    }
    .btn__info--true {
        color: #17a2b8;
        background: transparent none;
        border-color: #17a2b8;
    }
    .btn__dark--false {
        color: #fff;
        background-color: #343a40;
        border-color: #343a40;
    }
    .btn__dark--true {
        color: #343a40;
        background: transparent none;
        border-color: #343a40;
    }
    .btn__disabled--false {
        color: #fff;
        background-color: #d2d2d2;
        border-color: #d2d2d2;
    }
    .btn__disabled--true {
        color: #333;
        background: transparent none;
        border-color: #999;
    }

    /* hover */
    .btn__hover {
        opacity: 0.9;
    }