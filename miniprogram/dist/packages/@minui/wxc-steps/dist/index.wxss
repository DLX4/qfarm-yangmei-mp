.step {
    display: flex;
    background: #fff
}
.step__icon {
    color: #ff4422;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 15rpx
}
.step__dot {
    width: 14rpx;
    height: 14rpx;
    border-radius: 50%;
    background: #fff;
    border: 1rpx solid #ff4422
}
.step__dot--todo {
    border-color: #ddd
}
.step__line {
    flex: 1;
    width: 1rpx;
    height: 100%;
    background: #ddd
}
.step__line--finish {
    background: #ff4422
}
.step__content {
    margin-bottom:32rpx
}
.step__desc {
    line-height:32rpx;
    font-size: 28rpx;
    color: #333;
    background: #fff;
    padding-right: 1rpx;
    margin-bottom: 10rpx
}
.step__desc--todo {
    color: #999
}
.step__title {
    font-size: 24rpx;
    color: #999;
    line-height:23rpx
}