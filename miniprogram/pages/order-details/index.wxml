        <image wx:elif="{{order.status==2}}" class="icon" src="/images/order-details/icon-ddsh.png"></image>
        <image wx:elif="{{order.status==3 || order.status==4}}" class="icon" src="/images/order-details/icon-jycg.png"></image>
