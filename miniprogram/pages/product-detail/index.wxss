@import "/templates/wxParse/wxParse.wxss";

.container {
  background-color: #f2f2f2;
}
/* 产品轮播 */
.swiper-container {
  width: 750rpx;
  height: 460rpx;
  position: relative;
}

.swiper_box {
  width: 100%;
  height: 100%;
}

.swiper-item {
  width: 100%;
  height: 100%;
}

.swiper-item-image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;

}
/* 产品介绍 */
.product-info {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 100%;
  position: relative;
}
.product-info .title {
  box-sizing: border-box;
  padding: 20rpx 35rpx 20rpx 35rpx;
  font-size: 32rpx;
  line-height: 1.4;
  color: #000;
  display: flex;
  flex-direction: column;
}
.product-info .introduction {
  box-sizing: border-box;
  padding: 10rpx 35rpx 20rpx 35rpx;
  font-size: 25rpx;
  line-height: 1.2;
  color: #000;
  display: flex;
  flex-direction: column;
}


/* 产品简要信息 */
.product-brief-info {
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 35rpx;

}

.product-brief-part1 {
  width: 50%;
  display: flex;
  flex-direction: column;
}

.product-brief-part1 .product-sale-price {
  text-align: left;
  font-size: 26rpx;
  font-weight: bold;
  color:  #FF0077;
}

.product-brief-part1 .product-origin-price {
  text-align: left;
  padding-left: 0rpx;
  font-size: 23rpx;
}

.product-brief-part2 {
  width: 25%;
  display: flex;
  flex-direction: column;
}
.product-brief-part3 {
  width: 25%;
  display: flex;
  flex-direction: column;
}
.product-brief-font {
  color:#999;
  text-align: left;
  padding-top: 5rpx;
  padding-left: 0rpx;
  font-size: 23rpx;
}
/* 分割线 */
.cut-line-box {
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items:center;
}

.cut-line{
  background: #dbdbdb;
  width: 90%;
  height: 1rpx;
  line-height:20rpx;
}

/* 标签 */
.label-box {
  display: flex;
  flex-direction: row;
  align-items:center;
  font-size: 23rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx
}
/* 商品详情 */
.product-detail-info {
  width: 100%;
  margin-top: 18rpx;
  margin-bottom: 100rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.product-detail-info .title {
  padding: 20rpx 35rpx 0rpx 35rpx;
  font-size: 32rpx;
  line-height: 1.4;
  color: #000;
}

/* 底部按钮 */
.product-detail-info .detail {
  padding: 20rpx 35rpx 0rpx 35rpx;
  color:#999;
  font-size: 23rpx;
  line-height: 1.4;
}
.product-detail-info .image-box {
  margin-top: 18rpx;
  display:flex;
  flex-direction: column;
  align-items:center;
  justify-content: center;
}


.footer-box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow: 0 0 6rpx 0;
}

.footer-box .contact {
  position: relative;
  width: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /*line-height: 100rpx;
  text-align: center;
  padding-top: 26rpx;*/
  font-size: 20rpx;
  color: #008000;
  box-sizing: border-box;
  background: url("https://7166-qfarm-mp-test-8ef757-1258810866.tcb.qcloud.la/common/kefu.png") no-repeat center 21rpx;
  background-size: 55rpx auto;
}

.footer-box .shop-cart-btn {
  position: relative;
  width: 135rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 20rpx;
  color: #acacb7;
  box-sizing: border-box;
  background: url("https://7166-qfarm-mp-test-8ef757-1258810866.tcb.qcloud.la/common/shop-car.png") no-repeat center 21rpx; /*https://7166-qfarm-mp-test-8ef757-1258810866.tcb.qcloud.la/common/cart.png*/
  background-size: 60rpx auto;
}

.footer-box .shop-cart-btn .shop-num {
  position: absolute;
  left: 65rpx;
  top: 20rpx;
  font-size: 25rpx;
  font-weight: 400;
  background: #FF0077;
  color: #ffffff;
  margin-left: 15rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  text-align: center;
}

.footer-box .join-shop-cart {
  text-align: center;
  width: 615rpx;
  height: 100%;
  line-height: 100rpx;
  background-color: #ff0088;
  color: #fff;
  font-size: 34rpx;
}

