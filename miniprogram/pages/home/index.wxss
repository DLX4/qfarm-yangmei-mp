/**index.wxss**/
@import "../../templates/product-list-item/product-list-item.wxss";

page {
  background-color: #f4f4f4;
  min-height: 100%;
}

.container {
  width: 100%;
  background-color: #f4f4f4;
}
/* [banner区] swiper */
.banner-container {
  width: 750rpx;
  background-color: white;
}

.swiper-box {
  width: 100%;
  height: 375rpx; /*562.5rpx;*//**/
  overflow: hidden;
}

.swiper-item {
  overflow: visible;
  border-radius: 50%;
}

.swiper-item .slide-image {
  /*swiper-item image */
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 375rpx; /*562.5rpx;*/
  border-radius: 15rpx;
  background-color: #fff;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  position: relative;
}


.dots {
  position: relative;
  bottom: 10rpx;
  margin: 20rpx 30rpx 0 0;
  display: flex;
  justify-content: flex-end;
}

.dots .dot {
  margin: 0 10rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: #999;
  transition: all 0.6s;
  opacity: 0.5;
}

.dots .dot.active {
  background-color: #FF0077;
  opacity: 1;
}

/* [公告栏] */
.notice-container {
  margin-top: 5rpx;
  width: 100%;
  height: 100rpx;
  background: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}


.notice-swiper {
  display: flex;
  flex-direction: row;
  height: 50rpx;
  line-height: 40rpx;
  width: 400rpx;
}

.notice-item {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #333;
}
/* 产品区 */
.products-container {
  margin-top: 11rpx;
  padding-top: 5rpx;
  width: 100%;
  height: 100%;
  background: #ffffff;
  align-items: center;
  justify-content: center;
}

.product-list {
  position: relative;
  width: 100%;
  height: 260rpx;
  background-color: white;
  overflow: hidden;
  margin: 10rpx 10rpx 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}


