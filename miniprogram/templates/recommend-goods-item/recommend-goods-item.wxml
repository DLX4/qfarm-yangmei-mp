<import src="../starscore/starscore.wxml" />

<template name="recommend-goods-item">
  <view class="img-box">
    <image src="{{item.pic}}" class="image">
      <image class='fresh-tag' src="/images/goodsDescription/fresh.png"></image>
    </image>
  </view>

  <view style="width: 430rpx;height: 250rpx;">
    <view class='goods-info-box'>
      <view class="goods-title">{{item.title}}</view>
      <view class='goods-introduction'>{{item.introduction}}</view>
      <view style="width: 430rpx;height: 40rpx;display: flex;flex-direction: row;">
        <view class="goods-price-box">
          <wxc-price class='goods-minPrice' value='{{item.salePrice}}'></wxc-price>
          <wxc-price class="goods-originalPrice" wx:if='{{item.originPrice != 0}}' value='{{item.originPrice}}' status='del'></wxc-price>
        </view>

        <view class="product-numb">
          <view class="remove"
                bindtap="removeFromTrolley"
                hidden="{{item.numb==0}}"
                data-productid="{{item._id}}">-</view>
          <text class="text"
                hidden="{{item.numb==0}}">{{item.numb}}</text>
          <view class="add"
                bindtap="addToTrolley" data-productid="{{item._id}}">+</view>
        </view>

      </view>
    </view>

  </view>

</template>